#include <stdio.h>
#include <math.h>

int main() 
{
    float radius, area, perimeter;

    // Input the radius of the circle
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate the area of the circle using pow() (with Pi = 3.14)
    area = 3.14 * pow(radius, 2);

    // Calculate the perimeter (circumference) of the circle (with Pi = 3.14)
    perimeter = 2 * 3.14 * radius;

    // Print the area and perimeter with two decimal places
    printf("Area of the circle: %f", area);
    printf("Perimeter (Circumference) of the circle: %f", perimeter);

}
